<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/pin_entry_grid"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    tools:context="com.samourai.wallet.fragments.PinEntryFragment">

    <TextView
        android:id="@+id/ta"
        android:layout_width="@dimen/pin_entry_key_width"
        android:layout_height="@dimen/pin_entry_key_height"
        android:elevation="0dp"
        android:gravity="center"
        android:textColor="@color/primary_light"
        android:textSize="42sp"
        android:typeface="sans"
        app:cornerRadius="10dp"
        android:background="@drawable/pin_entry_button_background"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintBottom_toTopOf="@+id/guideline6"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.33547445" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.66" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.25" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.5" />

    <TextView
        android:id="@+id/tb"
        android:layout_width="@dimen/pin_entry_key_width"
        android:layout_height="@dimen/pin_entry_key_height"
        android:elevation="0dp"
        android:gravity="center"
        android:textColor="@color/primary_light"
        android:textSize="42sp"
        android:typeface="sans"
        app:cornerRadius="10dp"
        android:background="@drawable/pin_entry_button_background"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/ta"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/ta"
        />

    <TextView
        android:id="@+id/tc"
        android:layout_width="@dimen/pin_entry_key_width"
        android:layout_height="@dimen/pin_entry_key_height"
        android:elevation="0dp"
        android:gravity="center"
        android:textColor="@color/primary_light"
        android:textSize="42sp"
        android:typeface="sans"
        app:cornerRadius="10dp"
        android:background="@drawable/pin_entry_button_background"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/tb"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/tb"
        />

    <TextView
        android:id="@+id/te"
        android:layout_width="@dimen/pin_entry_key_width"
        android:layout_height="@dimen/pin_entry_key_height"
        android:elevation="0dp"
        android:gravity="center"
        android:textColor="@color/primary_light"
        android:textSize="42sp"
        android:typeface="sans"
        app:cornerRadius="10dp"
        android:background="@drawable/pin_entry_button_background"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/td"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/td"
        />

    <TextView
        android:id="@+id/td"
        android:layout_width="@dimen/pin_entry_key_width"
        android:layout_height="@dimen/pin_entry_key_height"
        android:elevation="0dp"
        android:gravity="center"
        android:textColor="@color/primary_light"
        android:textSize="42sp"
        android:typeface="sans"
        app:cornerRadius="10dp"
        android:background="@drawable/pin_entry_button_background"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintBottom_toTopOf="@+id/guideline7"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline6"
        />

    <TextView
        android:id="@+id/tg"
        android:layout_width="@dimen/pin_entry_key_width"
        android:layout_height="@dimen/pin_entry_key_height"
        android:elevation="0dp"
        android:gravity="center"
        android:textColor="@color/primary_light"
        android:textSize="42sp"
        android:typeface="sans"
        app:cornerRadius="10dp"
        android:background="@drawable/pin_entry_button_background"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintBottom_toTopOf="@+id/guideline8"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/guideline7"
        />

    <TextView
        android:id="@+id/tf"
        android:layout_width="@dimen/pin_entry_key_width"
        android:layout_height="@dimen/pin_entry_key_height"
        android:elevation="0dp"
        android:gravity="center"
        android:textColor="@color/primary_light"
        android:textSize="42sp"
        android:typeface="sans"
        app:cornerRadius="10dp"
        android:background="@drawable/pin_entry_button_background"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/te"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/te"
        />


    <ImageButton
        android:id="@+id/tback"
        android:layout_width="@dimen/pin_entry_key_width"
        android:layout_height="@dimen/pin_entry_key_height"
        android:background="?android:attr/selectableItemBackground"
        android:elevation="0dp"
        android:src="@drawable/ic_backspace_white_24dp"
        android:stateListAnimator="@null"
        app:tint="@color/white"
        app:layout_constraintBottom_toBottomOf="@+id/tj"
        app:layout_constraintEnd_toStartOf="@+id/guideline3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tj" />

    <TextView
        android:id="@+id/th"
        android:layout_width="@dimen/pin_entry_key_width"
        android:layout_height="@dimen/pin_entry_key_height"
        android:elevation="0dp"
        android:gravity="center"
        android:textColor="@color/primary_light"
        android:textSize="42sp"
        android:typeface="sans"
        app:cornerRadius="10dp"
        android:background="@drawable/pin_entry_button_background"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/tg"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/tg"
        />

    <TextView
        android:id="@+id/ti"
        android:layout_width="@dimen/pin_entry_key_width"
        android:layout_height="@dimen/pin_entry_key_height"
        android:elevation="0dp"
        android:gravity="center"
        android:textColor="@color/primary_light"
        android:textSize="42sp"
        android:typeface="sans"
        app:cornerRadius="10dp"
        android:background="@drawable/pin_entry_button_background"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="@+id/th"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/th"
        />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.75074184" />

    <TextView
        android:id="@+id/tj"
        android:layout_width="@dimen/pin_entry_key_width"
        android:layout_height="@dimen/pin_entry_key_height"
        android:elevation="0dp"
        android:gravity="center"
        android:textColor="@color/primary_light"
        android:textSize="42sp"
        android:typeface="sans"
        app:cornerRadius="10dp"
        android:background="@drawable/pin_entry_button_background"
        android:clickable="true"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintStart_toStartOf="@+id/guideline3"
        app:layout_constraintTop_toTopOf="@+id/guideline8"
        />

    <ImageButton
        android:id="@+id/tconfirm"
        android:layout_width="@dimen/pin_entry_key_width"
        android:layout_height="@dimen/pin_entry_key_width"
        android:background="@drawable/rounded_rectangle_green"
        android:src="@drawable/ic_done_white_24dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/tj"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="@+id/tj"
        tools:visibility="visible" />

</androidx.constraintlayout.widget.ConstraintLayout>
